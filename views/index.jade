extends layout

block content
  .row
    .neck
      #main-carousel.carousel.carousel-bg.slide(data-ride='carousel', data-interval="30000", hero)
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#main-carousel', data-slide-to='0')
          li(data-target='#main-carousel', data-slide-to='1')
        
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active
            .carousel-caption(data-animation="animated flipInY")
              h2(data-animation="animated bounceInDown") #{__("Get Ready")}
              p.text-center
                span.text-center(data-animation="animated zoomInRight")
                  img(src="img/logos/anyandgo-eq-mean.png",style="max-width: 400px;")
          .item
            .carousel-caption(data-animation="animated flipInY")
              h2(data-animation="animated flip") #{__("Innovate")}
              p
                span(data-animation="animated rotateIn")  $ [sudo] npm install anyandgo-cli
                span(data-animation="animated rollIn")  $ anyandgo init my-new-project 
        
        // Controls
        a.left.carousel-control(href='#main-carousel', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
          span.sr-only Previous
        a.right.carousel-control(href='#main-carousel', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
          span.sr-only Next
      
  .row.our-main-content
    .col-sm-10.col-sm-offset-1
      div
        p
          // moment("23/10/2015 9:00", "D/M/YYYY H:mm").valueOf();
          timer(end-time='1445569200000')
          timer(interval='1000', countdown='30', end-time='1445569200000')
            div {{days}} days, {{hours}} hours, {{minutes}} minutes, {{seconds}} seconds.
          timer#countdown(interval='1000', countdown='30', end-time='1445569200000')
            | Remaining time : {{days}} second{{secondsS}} ({{progressBar}}%). Activity? {{displayProgressActive}}
            div {{days}} days, {{hours}} hours, {{minutes}} minutes, {{seconds}} seconds.
            .progress.progress-striped(class='{{displayProgressActive}}', style='height: 30px;')
              .bar(style='min-width: 2em; height: 30px; width: {{progressBar}}%;')
                | {{ progressBar }}%
        .thumbnail
          .caption
            h3 #{__("Install anyandgo")}  
            pre
              code.language-bash $ [sudo] npm install -g anyandgo-cli 

            h3 Create a new project 
            pre
              code.language-bash 
              | $ anyandgo init mynewproject
              |    You have successfully created the anyandgo project
              |    Try:
              |         cd mynewproject
              |         npm install && bower install && grunt
            h3 #{__("MEAN Framework")}  
            div(style="min-height: 100px;")
              p Anyandgo let you create blazing fast, scalable web applications using MongoDB, Express, Node.JS and AngularJS. 
              a.btn.btn-default(href='/docs', role='button')
                i.fa.fa-book(style="padding-right:10px")
                | #{__("Read Docs")}
